<Window x:Class="Styles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Styles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="styleButtonDefault" >
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button" x:Key="styleBoldText" BasedOn="{StaticResource styleButtonDefault}" >
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <Button Style="{StaticResource styleBoldText}">Inherited Style</Button>
        <Button Style="{StaticResource styleButtonDefault}">Default Style</Button>
        <Button Style="{StaticResource styleButtonDefault}">Default Style</Button>
        <Button>No Style</Button>

    </StackPanel>
</Window>
