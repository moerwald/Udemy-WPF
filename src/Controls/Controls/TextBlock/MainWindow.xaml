<Window x:Class="TextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="259" Width="144">
    <StackPanel >
        <TextBlock TextWrapping="Wrap" Margin="10" >
            Text wrapping activ. No text gets trimmed.
        </TextBlock>
        <TextBlock TextTrimming="WordEllipsis"  Margin="10">
            Text trimming. This text is not shown.
        </TextBlock>
        <TextBlock Margin="10">
            No text trimming at all. This text is not shown.
        </TextBlock>
    </StackPanel>
</Window>
