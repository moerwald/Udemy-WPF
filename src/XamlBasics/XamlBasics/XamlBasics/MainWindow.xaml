<Window x:Class="XamlBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlBasics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_test" Content="Click Me" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Background="Green"/>
        <StackPanel>
            <Label>Markup Extension Sample</Label>
            <Button Width="140" Height="40" Content="{Binding ElementName=slider_test, Path=Value}"/>
            <Slider x:Name="slider_test" Value="0"/>
        </StackPanel>

    </Grid>
</Window>
